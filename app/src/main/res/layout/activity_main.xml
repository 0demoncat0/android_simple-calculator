<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ctn.caculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <HorizontalScrollView
            android:id="@+id/mainScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/textViewHeight"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mainTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:maxLines="2"
                android:gravity="right"
                android:text="12312+4\n=55"
                android:textColor="#505050"
                android:textSize="50sp" />
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/buttonHistory"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/button_history"
            android:contentDescription="@string/history"
            android:src="@drawable/ic_expand_more_black_24dp"
            android:textSize="20sp"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_op"
                android:text="@string/clear"
                android:textColor="@color/color_btn_clear"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonDiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_op"
                android:text="@string/div"
                android:textColor="@color/color_btn_op"
                android:textSize="32sp" />

            <Button
                android:id="@+id/buttonMul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_op"
                android:text="@string/mul"
                android:textColor="@color/color_btn_op"
                android:textSize="32sp" />

            <ImageButton
                android:id="@+id/buttonDel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_op"
                android:src="@drawable/ic_backspace_black_24dp"
                android:textColor="@color/color_btn_op"
                android:contentDescription="Delete" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonSeven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:text="7"
                android:textColor="@color/color_btn_main"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonEight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:text="8"
                android:textColor="@color/color_btn_main"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonNine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:text="9"
                android:textColor="@color/color_btn_main"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonSub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_op"
                android:text="@string/sub"
                android:textColor="@color/color_btn_op"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:text="4"
                android:textColor="@color/color_btn_main"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonFive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:text="5"
                android:textColor="@color/color_btn_main"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonSix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:text="6"
                android:textColor="@color/color_btn_main"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_op"
                android:text="@string/add"
                android:textColor="@color/color_btn_op"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:text="1"
                android:textColor="@color/color_btn_main"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:text="2"
                android:textColor="@color/color_btn_main"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:text="3"
                android:textColor="@color/color_btn_main"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonBrace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_op"
                android:text="()"
                android:textColor="@color/color_btn_op"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonZero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:text="0"
                android:textColor="@color/color_btn_main"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:text="."
                android:textColor="@color/color_btn_main"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonSign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:text="@string/sign"
                android:textColor="@color/color_btn_main"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_op"
                android:text="="
                android:textColor="@color/color_btn_equal"
                android:textSize="32sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
