<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:screenOrientation="portrait"
    android:configChanges="keyboardHidden|orientation|screenSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/ParentLayoutPaddingBottom"
    android:paddingLeft="@dimen/ParentLayoutPaddingLeft"
    android:paddingRight="@dimen/ParentLayoutPaddingRight"
    android:paddingTop="@dimen/ParentLayoutPaddingTop"
    tools:context="com.example.ctn.caculator.MainActivity">

    <TextView
        android:id="@+id/mainTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:enabled="false"
        android:text="121a2121211222"
        android:scrollbars = "horizontal"
        android:gravity="right"
        android:textSize="50sp"
        android:textColor="#505050"
        android:maxLines="2"
        android:ellipsize="end"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/buttonHistory"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/ic_expand_more_black_24dp"
                android:background="@drawable/button_history"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/RowHeight">
            <Button
                android:id="@+id/buttonClear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_op"
                android:layout_weight="1"
                android:text="C"
                android:textSize="20sp"
                android:textColor="@color/color_btn_clear"/>

            <Button
                android:id="@+id/buttonDiv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_op"
                android:layout_alignRight="@id/buttonClear"
                android:layout_weight="1"
                android:text="@string/div"
                android:textSize="32sp"
                android:textColor="@color/color_btn_op"/>

            <Button
                android:id="@+id/buttonMul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_op"
                android:layout_alignRight="@id/buttonDiv"
                android:layout_weight="1"
                android:text="@string/mul"
                android:textSize="32sp"
                android:textColor="@color/color_btn_op"/>

            <Button
                android:id="@+id/buttonDel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:background="@drawable/button_op"
                android:layout_alignRight="@id/buttonMul"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_backspace_black_24dp"
                android:drawableTint="@color/color_btn_op" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/RowHeight">
            <Button
                android:id="@+id/buttonSeven"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:layout_weight="1"
                android:text="7"
                android:textSize="20sp"
                android:textColor="@color/color_btn_main" />
            <Button
                android:id="@+id/buttonEight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:layout_alignRight="@id/buttonSeven"
                android:layout_weight="1"
                android:text="8"
                android:textSize="20sp"
                android:textColor="@color/color_btn_main" />
            <Button
                android:id="@+id/buttonNine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:layout_alignRight="@id/buttonEight"
                android:layout_weight="1"
                android:text="9"
                android:textSize="20sp"
                android:textColor="@color/color_btn_main" />
            <Button
                android:id="@+id/buttonSub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_op"
                android:layout_alignRight="@id/buttonNine"
                android:layout_weight="1"
                android:text="@string/sub"
                android:textSize="32sp"
                android:textColor="@color/color_btn_op"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/RowHeight">
            <Button
                android:id="@+id/buttonFour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:layout_weight="1"
                android:text="4"
                android:textSize="20sp"
                android:textColor="@color/color_btn_main"/>
            <Button
                android:id="@+id/buttonFive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:layout_alignRight="@id/buttonFour"
                android:layout_weight="1"
                android:text="5"
                android:textSize="20sp"
                android:textColor="@color/color_btn_main"/>
            <Button
                android:id="@+id/buttonSix"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:layout_alignRight="@id/buttonFive"
                android:layout_weight="1"
                android:text="6"
                android:textSize="20sp"
                android:textColor="@color/color_btn_main"/>
            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_op"
                android:layout_alignRight="@id/buttonSix"
                android:layout_weight="1"
                android:text="@string/add"
                android:textSize="32sp"
                android:textColor="@color/color_btn_op"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/RowHeight">
            <Button
                android:id="@+id/buttonOne"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:layout_weight="1"
                android:text="1"
                android:textSize="20sp"
                android:textColor="@color/color_btn_main"/>
            <Button
                android:id="@+id/buttonTwo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:layout_alignRight="@id/buttonOne"
                android:layout_weight="1"
                android:text="2"
                android:textSize="20sp"
                android:textColor="@color/color_btn_main"/>
            <Button
                android:id="@+id/buttonThree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:layout_alignRight="@id/buttonTwo"
                android:layout_weight="1"
                android:text="3"
                android:textSize="20sp"
                android:textColor="@color/color_btn_main"/>
            <Button
                android:id="@+id/buttonBrace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_op"
                android:layout_alignRight="@id/buttonThree"
                android:layout_weight="1"
                android:text="()"
                android:textSize="20sp"
                android:textColor="@color/color_btn_op"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/RowHeight">
            <Button
                android:id="@+id/buttonZero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/color_btn_main"/>
            <Button
                android:id="@+id/buttonDot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:layout_alignRight="@id/buttonZero"
                android:layout_weight="1"
                android:text="."
                android:textSize="20sp"
                android:textColor="@color/color_btn_main"/>
            <Button
                android:id="@+id/buttonSign"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:layout_alignRight="@id/buttonDot"
                android:layout_weight="1"
                android:text="@string/sign"
                android:textSize="20sp"
                android:textColor="@color/color_btn_main" />
            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_op"
                android:layout_alignRight="@id/buttonSign"
                android:layout_weight="1"
                android:text="="
                android:textSize="32sp"
                android:textColor="@color/color_btn_equal"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
